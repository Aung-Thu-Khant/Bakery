<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recName"
            android:text="Name"
            android:textColor="#593938"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/recEamil"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recName"
            android:text="Email"
            android:textColor="#593938"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recPhNo"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/recEamil"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recName"
            android:maxLines="1"
            android:text="Phone No"
            android:textColor="#593938"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recAddress"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/recPhNo"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recName"
            android:maxLines="1"
            android:text="Address"
            android:textColor="#593938"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>